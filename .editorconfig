# Apply to this repo only
root = true

# C# files
[*.cs]

#### Indentation ####
indent_style = space
indent_size = 4
tab_width = 4

#### .NET code style (align with .cursor/rules/csharp-standards.mdc) ####
# Prefer braces for all control flow (if, else, for, foreach, while, using)
csharp_prefer_braces = true
dotnet_diagnostic.IDE0011.severity = warning

# No empty catch blocks (Roslynator RCS1075)
dotnet_diagnostic.RCS1075.severity = warning

# One file per class (Roslynator RCS1060)
dotnet_diagnostic.RCS1060.severity = warning

#### Formatting ####
trim_trailing_whitespace = true

#### Test projects: allow underscores in method names (e.g. Given_X_When_Y_Then_Z) ####
[tests/**/*.cs]
dotnet_diagnostic.CA1707.severity = none
